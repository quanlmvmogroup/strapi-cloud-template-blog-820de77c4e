{
  "kind": "collectionType",
  "collectionName": "policy_documents",
  "info": {
    "singularName": "policy-document",
    "pluralName": "policy-documents",
    "displayName": "Policy Documents"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "type": {
      "type": "enumeration",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "enum": [
        "Policy",
        "Toolkit",
        "Guideline"
      ]
    },
    "attachment": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "publication_date": {
      "type": "date",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "document_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::document-category.document-category",
      "inversedBy": "policy_documents"
    }
  }
}
